@model Web.ViewModels.User.UserViewModel;

@if(Model != null && Model.DetailData != null && Model.DetailData.Info != null)
{
    var info = Model.DetailData.Info;
    var role = info.Role switch
    {
        "normal" => "一般使用者",
        "manage" => "管理員",
        _ => ""
    };
    var status = info.Status switch
    {
        "enabled" => "啟用中",
        "disabled" => "停用中",
        _ => ""
    };
    <div class="row">
        <div class="col-lg-12">
            <div class="card">
                <div class="card-body">
                    <table class="table table-hover mb-0">
                        <tbody>
                            <tr>
                                <th class="w-5">名稱</th>
                                <td>@info.Name</td>
                            </tr>
                            <tr>
                                <th class="w-5">帳號</th>
                                <td>@info.Account</td>
                            </tr>
                            <tr>
                                <th class="w-5">信箱</th>
                                <td>@info.Email</td>
                            </tr>
                            <tr>
                                <th class="w-5">權限</th>
                                <td>@role</td>
                            </tr>
                            <tr>
                                <th class="w-5">狀態</th>
                                <td>@status</td>
                            </tr>
                            <tr>
                                <th class="w-5">建立日期</th>
                                <td>@info.Create_time</td>
                            </tr>
                            <tr>
                                <th class="w-5">更新日期</th>
                                <td>@info.Update_time</td>
                            </tr>
                        </tbody>
                    </table>
                    <!--end /table-->
                </div>
                <!--end /tableresponsive-->
            </div>
        </div>
    </div>
    <!--end row-->
}